# OG Frontend - Local Development Environment
# Bu dosya sadece local development için kullanılır

# Backend API URL'i - Local backend server
VITE_API_BASE_URL=http://localhost:3000/api

# Development modu
NODE_ENV=development

# Build optimizasyonları - Development için kapalı
VITE_BUILD_MODE=development
VITE_DROP_CONSOLE=false

# Hot Module Replacement (HMR) için
VITE_HMR_HOST=localhost
VITE_HMR_PORT=5173

# Debug modları
VITE_DEBUG_MODE=true
VITE_SHOW_ERRORS=true

# WebSocket URL - Realtime features için
VITE_WS_URL=ws://localhost:3000

# Development security settings
VITE_ENABLE_DEVTOOLS=true
VITE_SKIP_CSRF=false

# API Timeout (ms) - Development için daha uzun
VITE_API_TIMEOUT=30000

# Session timeout (dakika) - Development için daha uzun
VITE_SESSION_TIMEOUT=120

# Rate limiting - Development için gevşek
VITE_RATE_LIMIT_ENABLED=false

# Cache settings - Development için kapalı
VITE_ENABLE_CACHE=false
VITE_CACHE_DURATION=0